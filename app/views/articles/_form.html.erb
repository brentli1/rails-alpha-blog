<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'control-lab col-sm-2' %>
        <div class="col-sm-8">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'control-lab col-sm-2' %>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Title of article' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :category_ids, 'Categories', class: 'control-lab' %>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select :category_ids, Category.all, :id, :name, { selected: @article.categories.map(&:id) }, { multiple: true, class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
