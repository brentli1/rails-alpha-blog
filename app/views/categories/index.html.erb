<h1 class="center page-title">Categories</h1>
<div class="center category-list">
  <%= will_paginate %>
  <% @categories.each do |cat| %>
    <ul class="category-list__items center">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="category-list__title">
            <%= link_to cat.name, category_path(cat) %>
          </li>
          <li>
            <small><%= pluralize(cat.articles.count, 'articles') %></small>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
