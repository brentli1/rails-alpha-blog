<h1 class="center">Login</h1>
<div class="login-form__container col-sm-6">
  <%= form_for(:session, :html => { class: 'form-horizontal', role: 'form' }, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: 'control-lab col-sm-2' %>
      <div class="col-sm-8">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-lab col-sm-2' %>
      <div class="col-sm-8">
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
</div>
