<h1 class="center">All Users</h1>

<div class="center">
  <%= will_paginate %>
</div>

<section class="user-list row">
  <% @users.each do |user| %>
    <ul class="user-list__items center well col-md-4 col-md-offset-4">
      <li>
        <%= link_to gravatar_for(user), user_path(user) %>
      </li>
      <li class="user-list__title">
        <%= link_to user.username, user_path(user) %>
      </li>
      <li>
        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
      </li>
      <% if logged_in? and current_user.admin? %>
        <li>
          <%= link_to "Delete this user", user_path(user), 
                                          method: :delete, 
                                          data: { confirm: "Are you sure you want to delete the user and all articles?" } %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<div class="center">
  <%= will_paginate %>
</div>
